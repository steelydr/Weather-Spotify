{
    "manifest_version": 2,
    "name": "Weather-Linked Music Playlist",
    "version": "1.0",
    "description": "Suggests mood-based Spotify playlists based on the current weather.",
    "permissions": ["geolocation", "storage"],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }